<?xml version="1.0" encoding="utf-8"?>
<android.support.wearable.view.BoxInsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    tools:context="com.pulce.wristglider.MainWearActivity"
    tools:deviceIds="wear"
    android:keepScreenOn="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/RelativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black">

        <TextView
            android:id="@+id/speedtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:background="@color/black"
            android:text="36.5"
            android:textColor="@color/white"
            android:textSize="56dp"
            app:layout_box="all"
            android:fitsSystemWindows="true"/>

        <ImageView
            android:id="@+id/directionImage"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginTop="4dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:background="@color/black"
            android:src="@drawable/direction"
            android:clickable="true"
            />


        <TextView
            android:id="@+id/altitext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp"
            android:background="@color/black"
            android:text="1422"
            android:textColor="@color/white"
            android:textSize="56dp"
            app:layout_box="all" />

        <TextView
            android:id="@+id/otherfeed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="5dp"
            android:background="@color/black"
            android:text="@string/hello_world"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:maxLines="2"
            android:clickable="true"
            app:layout_box="all" />

        <View
            android:background="@color/white"
            android:layout_width = "fill_parent"
            android:layout_height="1dip"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/directionImage"/>

        <TextView
            android:id="@+id/loggerstate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/directionImage"
            android:layout_centerHorizontal="true"
            android:gravity="top"
            android:background="@color/black"
            android:text=""
            android:textColor="@color/white"
            android:textSize="15dp"
            app:layout_box="all" />

        <View
            android:background="@color/white"
            android:layout_width = "fill_parent"
            android:layout_height="1dip"
            android:layout_below="@+id/otherfeed"/>

    </RelativeLayout>
</android.support.wearable.view.BoxInsetLayout>
